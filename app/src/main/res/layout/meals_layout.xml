<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/imageMeal"/>
    
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Title"
    android:textSize="15dp"
    android:padding="10dp"
    android:layout_toEndOf="@+id/imageMeal"
    android:id="@+id/titleMeal"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="15dp"
        android:id="@+id/prixMeal"
        android:padding="10dp"
        android:layout_toEndOf="@+id/titleMeal"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description meal"
        android:textSize="15dp"
        android:padding="10dp"
        android:layout_below="@+id/titleMeal"
        android:layout_toEndOf="@+id/imageMeal"
        />
</RelativeLayout>